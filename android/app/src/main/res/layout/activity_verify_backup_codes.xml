    <EditText
        android:id="@+id/backupCode9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Phrase 9"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/backupCode12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/backupCode8"
        app:layout_constraintTop_toBottomOf="@+id/backupCode6" />

    <EditText
        android:id="@+id/backupCode10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phrase 10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backupCode11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupCode7" />

    <EditText
        android:id="@+id/backupCode11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phrase 11"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backupCode12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/backupCode10"
        app:layout_constraintTop_toBottomOf="@+id/backupCode8" />

    <EditText
        android:id="@+id/backupCode12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phrase 12"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/backupCode11"
        app:layout_constraintTop_toBottomOf="@+id/backupCode9" />

    <Button
        android:id="@+id/proceedToBioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Proceed"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupCode11" />


</androidx.constraintlayout.widget.ConstraintLayout>